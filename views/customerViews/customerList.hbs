<div class="container">
    <h2>Klienci</h2>

    {{#each customers}}
    <div class="card mb-3">
        <div class="card-body">
             <h5 class="card-title">{{name}}</h5>
             <p class="card-text">Adres:</br>{{address.street}}</br>{{address.zipCode}}, {{address.city}}</p>
             <p class="card-text">{{nip}}</p>
             <a href="/customer/{{_id}}" class="btn btn-primary">Szczegóły</a>
        </div>   
    </div>
    {{/each}}
    
</div>



